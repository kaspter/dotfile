[color]
	ui = auto
	grep = auto
	diff = auto
	status = auto

[color "grep"]
	linenumber = yellow

[color "branch"]
	current = green reverse
	local = green
	remote = yellow

[core]
	editor = vim
	autocrlf = false
	fileMode = true
	safecrlf = true
# for windows
#	autocrlf = true
#	safecrlf = true

[user]
	name = Kaspter Ju
	email = camus@rtavs.com

[push]
	default = current

[apply]
# Detect whitespace errors when applying a patch
	whitespace = fix

# git clone --bare repo repo.git
[sendemail]
	smtpserver = smtp.ucheer.org
	smtpuser = kaspter@ucheer.org
	smtpencryption = tls
	smtpserverport = 587
	from = Kaspter@ucheer.org

[http]
    sslverify = false
	postBuffer = 1048576000
    #sslcainfo = /bin/curl-ca-bundle.crt

[diff]
	renames = true

[alias]
	co = checkout
	ci = commit
	st = status
	si = status --ignored
	br = branch -avv
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	sha1 = !sh -c 'git rev-parse ${1-`echo HEAD`}' -
	branches = "!sh -c 'git branch --list --no-color | \
				sed -e \"s/*/ /\" | \
				while read branch; do \
				git log -1 --format=format:\"$branch:|%s|%h|%ar\n\" $branch; done | \
				column -t -s\"|\"'"

	branches-notsorted = "!sh -c 'git branch --list --no-color | \
						sed -e \"s/*/ /\" | \
						while read branch; do \
						git log -1 --format=format:\"%ct %Cred$branch:%Cblue %s %Cgreen%h%Creset (%ar)\n\" $branch; \
						done'"
	branch-info = "!sh -c 'git branches-notsorted | sort | cut -d\" \" -f2-'"
